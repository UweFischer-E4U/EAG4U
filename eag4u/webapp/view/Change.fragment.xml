<core:FragmentDefinition 
    xmlns="sap.m" 
	xmlns:u="sap.ui.unified" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" 
	xmlns:core="sap.ui.core">
	<Dialog 
		id="ChangeUserDialog" 
		title="{i18n>fragmentTitleNeu}" 
		binding="{oOneData>/}"
		draggable="true" 
		resizable="true"
		contentWidth="50%"
		afterClose="onAferDialogClose">
		<buttons>
			<Button 
				type="Reject"
				icon="sap-icon://delete"
				text="{i18n>delete}" 
				class="sapUiLargeMarginEnd"
				press="onDelete"/>
			<Button 
				text="{i18n>save}" 
				type="Accept"
				class="sapUiLargeMarginBegin"
				press="onSave"/>
			<Button 
				text="{i18n>cancel}" 
				press="onCancel"/>
		</buttons>
		<content>
            <f:Form 
                id="" 
                editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="12"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="0"
                        emptySpanM="0"	
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="1"
                        singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            
                            <f:FormElement 
                                label="{i18n>ID}">
                                <f:fields>
                                    <Input 
                                        id="id"
                                        value="{oOneData>Id}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement 
                                label="{i18n>col_vorname}">
                                <f:fields>
                                    <Input 
                                        id="vorname"
                                        value="{oOneData>Vorname}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement 
                                label="{i18n>col_nachname}">
                                <f:fields>
                                <Input 
                                    id="nachname"
                                    value="{oOneData>Nachname}"/>
                                </f:fields>
                            </f:FormElement>
                            
                        </f:formElements>
                    </f:FormContainer>

                </f:formContainers>
            </f:Form>		
		</content>
	</Dialog>

</core:FragmentDefinition>